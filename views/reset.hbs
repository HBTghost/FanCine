<div class="container my-3">
<div class="row mt-5">
    <div class="col-md-6 m-auto">
        <div class="card card-body text-center">
            <h2>
                Cài lại mật khẩu mới
            </h2>
            {{> message }}
            <form action="/render/reset/{{ id }}"  method="POST">
                <div class="form-group">
                    {{#if password }}
                    <input type="password" id="password" name="password" class="form-control" placeholder="Nhập mật khẩu mới"
                        value="{{ password }}" required />
                    {{else}}
                    <input type="password" id="password" name="password" class="form-control" placeholder="Nhập mật khẩu "
                        value="" required />
                    {{/if}}
                  </div>
                  <div class="form-group">
                    {{#if password2 }}
                    <input type="password" id="password2" name="password2" class="form-control" placeholder="Nhập lại mật khẩu mới"
                        value="{{ password2 }}" required />
                    {{else}}
                    <input type="password" id="password2" name="password2" class="form-control" placeholder="Nhập lại mật khẩu mới"
                        value="" required />
                    {{/if}}
                  </div>
                <div class="row gap-2">
                  <div class="col-lg-6 col-sm-12 col-12">
                    <div class="g-recaptcha" data-sitekey="6LcxngkaAAAAAO-aKP2yGehcIFJ8bIXHiJ6awbZB"></div>
                  </div>
                  <div class="d-grid col-lg-6 col-sm-12 col-12 d-flex p-3">
                    <button type="submit" class="btn btn-outline-success btn-block">Cài đặt lại</button>
                  </div>
                </div>
            </form>
            <p class="mt-4">
                Đã nhớ mật khẩu? <a href="#nav-sign-in" onclick="popupLogin()">Đăng nhập</a>
            </p>
        </div>
    </div>
</div>
</div>