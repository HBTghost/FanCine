<div class="container mt-3">
    <!-- Search filter -->
    <button class="btn bg-info text-white font-weight-bold" type="button" data-toggle="collapse" data-target="#collapseExample" aria-expanded="false" aria-controls="collapseExample">
        Search filter <i class="fas fa-caret-square-down text-white"></i>
    </button>
    <div class="collapse search-filter" id="collapseExample">
        <div class="card card-body">
            <form action="/search">
            <div class="row">
                <div class="col-12 col-md">
                    <h6 class="text-center filter-header">Label</h6>
                    {{#each label}}
                    <div class="form-check form-check" >
                        <input class="form-check-input" type="checkbox" name="labelFilter" id="labelFilter{{@index}}" value="{{this}}">
                        <label class="form-check-label" for="labelFilter{{@index}}">{{this}}</label>
                    </div>
                    {{/each}}
                </div>
                <div class="col-12 col-md">
                    <h6 class="text-center filter-header">Category</h6>
                    {{#each category}}
                    <div class="form-check form-check">
                        <input class="form-check-input" type="checkbox" name="labelFilter" id="categoryFilter{{@index}}" value="{{this}}">
                        <label class="form-check-label" for="categoryFilter{{@index}}">{{this}}</label>
                    </div> 
                    {{/each}}
                </div>
                <div class="col-12 col-md">
                    <h6 class="text-center filter-header">Rating</h6>
                    <div class="form-check form-check">
                        <input class="form-check-input" type="checkbox" name="labelFilter" id="ratingFilterBand" value="0">
                        <label class="form-check-label" for="ratingFilterBand0">5 <i class="fas fa-less-than"></i></label>
                    </div>
                    <div class="form-check form-check">
                        <input class="form-check-input" type="checkbox" name="labelFilter" id="ratingFilterBand" value="5">
                        <label class="form-check-label" for="ratingFilterBand5"><i class="fas fa-greater-than-equal"></i> 5</label>
                    </div>
                    <div class="form-check form-check">
                        <input class="form-check-input" type="checkbox" name="labelFilter" id="ratingFilterBand" value="8">
                        <label class="form-check-label" for="ratingFilterBand8"><i class="fas fa-greater-than-equal"></i> 8</label>
                    </div>
                </div>
                
            </div>

            <input type="hidden" id="queryFilterHidden" name="q" value="{{ searchQuery }}">
            <div class="container-fluid text-center mt-3">
                <button type="submit" class="btn btn-info">Submit</button>
            </div>
            </form>
        </div>
    </div>
    <br>
    <!-- Content -->
    <div class="review-title-container">
        <div class="review-title-new"><a href="/search?q={{ searchQuery }}"><b>Từ khóa:</b> "{{ searchQuery }}"</a></div>
    </div>
    <div class="row">
        
        <div class="col-12 col-lg-8">
            
            <div class="container-fuild">
                <article class="review-list">
                    {{#if result}}
                    {{#each result}}
                    <div class="review-item">
                        
                        <a href="/info/{{_id}}" class="review-item-img">
                            <img src="{{ horizontalImageSource }}" alt="">
                        </a>
                        <div>
                            <a href="/info/{{_id}}">
                                <div class="review-item-title">
                                    <h4>{{ vietnameseName }}</h4>
                                    <h4>- {{ originalName }} -</h4>
                                </div>
                            </a>

                            <div class="review-item-content">{{ description.[0] }}</div>
                        </div>
                    </div>
                    
                    {{/each}}

                    <nav aria-label="..." class="d-flex justify-content-center mt-3" >
                        <ul class="pagination">
                            {{! previous page }}
                            <li class="page-item">
                                <a class="page-link" href="/search?q={{ searchQuery }}&page={{pagePrevious}}">Lùi</a>
                            </li>
                            {{! load link }}
                            {{#each pageArray}}
                            <li class="page-item {{#if (equal this '...')}}disabled{{/if}} {{#if (equal this ../pageCurrent)}}active{{/if}}">
                                <a class="page-link" href="/search?q={{ ../searchQuery }}&page={{this}}">{{this}}</a>
                            </li>
                            {{/each}}
                            {{! next page }}
                            <li class="page-item">
                                <a class="page-link" href="/search?q={{ searchQuery }}&page={{pageNext}}">Tiến</a>
                            </li>
                        </ul>
                    </nav>
                    {{else}}
                     <div class="review-item">
                         <a href="/" class="review-item-img">
                            <img src="https://i.loli.net/2020/12/16/RONHw4EXfGznVkr.jpg" alt="">
                        </a>

                        <div>
                            <a href="/">
                                <div class="review-item-title">
                                    <h4>OOPS - Hãy đưa tôi quay về trang chủ</h4>
                                </div>
                            </a>

                            <div class="review-item-content">Rất tiếc không có kết quả nào rồi!!</div>
                        </div>
                    </div>
                    {{/if}}
                </article>
            </div>
        </div>
        
            <!-- Show more button -->
        
        <div id="carouselExampleSlidesOnly" class="carousel slide" data-ride="carousel">
            <div class="carousel-inner">
                
                <div class="carousel-item ">
                    <img src="{{ imageSource }}" class="d-block w-100" alt="...">
                </div>    
            </div>
        </div>
        {{#if result}}
    <div class="col mb-5">
        <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
            <ol class="carousel-indicators">
                {{#each result}}
                <li data-target="#carouselExampleIndicators" data-slide-to="{{@index}}" class="active"></li>
                {{/each}}
            </ol>
            <div class="carousel-inner">
                {{#each result}}
                <div class="carousel-item {{#if @first}}active{{/if}}">
                    <img src="{{ imageSource }}" class="rounded w-100" alt="">
                </div>
                {{/each}}
            </div>
            <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>
    {{/if}}
    </div>
    
</div>
