<div class="container mt-3">
    <!-- Content -->
    <div class="review-title-container">
        <div class="review-title-new"><a href="/search?q={{ searchQuery }}">Từ khóa: {{ searchQuery }}</a></div>
    </div>
    <div class="row">
        
        <div class="col-12 col-lg-8" style="background-color:;">
            
            <div class="container-fuild">
                <article class="review-list">
                    {{#if result}}
                    {{#each result}}
                    <div class="review-item">
                        
                        <a href="/info/{{_id}}" class="review-item-img">
                            <img src="{{ horizontalImageSource }}" alt="">
                        </a>
                        <div>
                            <a href="/info/{{_id}}">
                                <div class="review-item-title">
                                    <h4>{{ vietnameseName }}</h4>
                                </div>
                            </a>

                            <div class="review-item-content">{{ description.[0] }}</div>
                        </div>
                    </div>
                    
                    {{/each}}
                    {{else}}
                     <div class="review-item">
                        <img src="https://i.loli.net/2020/12/16/RONHw4EXfGznVkr.jpg" alt="">
                        <div>
                            <div class="review-item-content">Rất tiếc không có kết quả nào rồi!!</div>
                        </div>
                    </div>
                    {{/if}}
                </article>
            </div>
        </div>
        
            <!-- Show more button -->
        <div class="col">
            <div class="container">
                <img src="https://via.placeholder.com/768x1024" alt="" class="img-thumbnail">
            </div>
        </div>
    </div>

</div>

