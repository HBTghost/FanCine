<div class="container">
    <div id="showtimes-container">
        <div id="showtimes-head">
        <button id="showtimes-controller-movie">ĐANG CHIẾU</button>
        <button id="showtimes-controller-theater">SẮP CHIẾU</button>
        </div>
    </div>
    <div class="row">
        {{!-- (.col-6.col-md-3.mt-3>(.onshow-banner(img[src="https://galaxycine.vn/media/2020/11/3/300wx450h_1604372215389.jpg"])+.onshow-title(.movie-name-title{Stardog and Turbocat}+.vn.movie-name-title{Liên quân siêu thú})))*6 --}}
        {{#each movies}}
            <div class="col-6 col-md-3 my-2">
                <!-- image -->
                <div class="onshow-banner">
                    <img src="{{imageSource}}" alt="">
                    <a href="/info/{{this._id}}">
                        <div class="movie-onshow-content content-hai">
                            <div class="movie-onshow-pg">{{ label }}</div>
                            <div class="btn movie-onshow-btn">Mua vé</div>
                        </div>
                    </a>
                </div>

                <!-- title -->
                <div class="onshow-title">
                    <div class="movie-name-title">{{ originalName }}</div>
                    <div class="vn movie-name-title">{{ vietnameseName }}</div>
                </div>
            </div>
        {{/each}}

    </div>
</div>
