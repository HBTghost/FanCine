<div class="container my-2" style="max-width: 1300px !important;">

<div class="row">
  <div class="col-md-3 col-lg-3 col-sm-12">
    <div class="list-group" id="list-tab" role="tablist">
      {{#each theaters }}
      {{#if (isZero @index) }}
      <a class="list-group-item list-group-item-action active" id="list-{{ _id }}-list" data-toggle="list" href="#list-{{ _id }}" role="tab" aria-controls="{{ _id }}">{{ name }}</a>
      {{else}}
      <a class="list-group-item list-group-item-action" id="list-{{ _id }}-list" data-toggle="list" href="#list-{{ _id }}" role="tab" aria-controls="{{ _id }}">{{ name }}</a>
      {{/if}}
      {{/each}}
    </div>
  </div>
  <div class="col-md-9 col-lg-9 col-sm-12">
    <div class="tab-content" id="nav-tabContent">
      {{#each theaters }}
      {{#if (isZero @index) }}
      <div class="tab-pane fade show active" id="list-{{ _id }}" role="tabpanel" aria-labelledby="list-{{ _id }}-list">
      {{else}}
      <div class="tab-pane fade" id="list-{{ _id }}" role="tabpanel" aria-labelledby="list-{{ _id }}-list">
      {{/if}}
        <div class="card">
          {{> theatersBanner }}
          <div class="card-header text-success">
            <b>{{ name }}</b>
          </div>
          <div class="card-body">
            <p class="card-text">{{ description }}</p>
            <hr>
            <p class="card-text"><b>Các phòng hiện có: </b>{{ join rooms ', ' }}</p>
            <hr>
            <p class="card-text"><b>Liên hệ: </b><a href="tel:{{ phone }}">{{ phone }}</a></p>
            <hr>
            <p class="card-text"><b>Địa chỉ: </b>{{ address }}</p>
          </div>
          <div class="card-footer text-muted">
            <iframe src="https://www.google.com/maps/embed?pb={{ mapEmbedID }}" class="w-100" height="450" frameborder="0" style="border:0;" allowfullscreen="" aria-hidden="false" tabindex="0"></iframe>
          </div>
        </div>
      </div>
      {{/each}}
    </div>
  </div>
</div>
</div>