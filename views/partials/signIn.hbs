<div class="modal-container" id="modal">
    <div class="modal-content p-3">
        <span class="modal-close" onclick="popdownModal()">X</span>
        <nav>
            <div class="nav nav-tabs" id="nav-tab" role="tablist">
                <a class="nav-item nav-link active" id="nav-home-tab" data-toggle="tab" href="#nav-sign-in" role="tab" aria-controls="nav-home" aria-selected="true">Đăng nhập</a>

                <a class="nav-item nav-link" id="nav-profile-tab" data-toggle="tab" href="#nav-sign-up" role="tab" aria-controls="nav-profile" aria-selected="false">Đăng ký</a>
            </div>
        </nav>
        <div class="tab-content" id="nav-tabContent">
            <!-- Login -->
            <div class="tab-pane fade show active" id="nav-sign-in" role="tabpanel" aria-labelledby="nav-home-tab">
                <form id="loginForm" onsubmit="login(event)">
                    <div class="form-group">
                        <input name="email" type="email" class="form-control" id="emailLogin" aria-describedby="emailHelp" placeholder="Email đã đăng ký" required>
                    </div>
                    <div class="form-group">
                        <input name="password" type="password" class="form-control" id="passwordLogin" placeholder="Password" required>
                    </div>
                    <small id="emailHelp" class="form-text text-muted text-right">
                        <a  href="/forgot">Quên mật khẩu</a>
                    </small>
                    <button type="submit" class="btn btn-outline-success">Đăng nhập!</button>
                </form>
            </div>
            <!-- register -->
            <div class="tab-pane fade" id="nav-sign-up" role="tabpanel" aria-labelledby="nav-profile-tab">
                <form {{! Action here }}>
                    {{! Email }}
                    <div class="form-group">
                        <input type="email" class="form-control" id="regEmail" placeholder="Email" name="email" required>
                    </div>
                    {{!-- Password --}}
                    <div class="form-row">
                        <div class="form-group col-md-6">
                        <input type="password" class="form-control" id="regPassword" name="pass" placeholder="Mật khẩu" required>
                        </div>
                        <div class="form-group col-md-6">
                        <input type="password" class="form-control" id="regPassword2" placeholder="Nhập lại Mật khẩu" required>
                        </div>
                    </div>
                    {{!-- Gender choose --}}
                    <div class="row">
                        {{!-- Gender choose --}}
                        <div class="col-md-8 col-12">
                            <div class="form-group">
                                <select class="form-control" id="genderReg" name="gender" required>
                                    <option value="" disabled selected hidden>Chọn giới tính</option>
                                    <option value="male">Nam</option>
                                    <option value="female">Nữ</option>
                                    <option value="others">Khác...</option>
                                </select>
                            </div>
                        </div>
                        {{!-- Birth day --}}
                        <div class="col-md-4 col-12">
                            <div class="form-group">
                                <input placeholder="Ngày Sinh" type="input" onfocus="(this.type='date')" id="birthdayReg" name="birthday">
                            </div>
                        </div>
                    </div>
                    
                    {{!-- Phone number --}}
                    <div class="form-group pt-3">
                        <input type="tel" class="form-control" id="regPhone" name="phone" pattern="[0-9]{10}" placeholder="Số điện thoại - ví dụ: 0912323454" required>
                    </div>
                    {{!-- Location --}}
                    <div class="row">
                        <div class="col">
                            <div class="form-group">
                                <select class="form-control" id="cityReg" name="city" required>
                                    <option value="" disabled selected hidden>Khu vực của bạn</option>
                                    <option value="HCM">TP.HCM</option>
                                    <option value="others">Khác...</option>
                                </select>
                            </div>
                        </div>
                        <div class="col">
                            <div class="form-group">
                                <select class="form-control" id="districtReg" name="district" required>
                                    <option value="" disabled selected hidden>Quận</option>
                                    <option value="1">Quận 1</option>
                                    <option value="5">Quận 5</option>
                                    <option value="11">Quận 11</option>
                                    <option value="5">Quận 5</option>
                                    <option value="11">Quận 11</option>
                                    <option value="5">Quận 5</option>
                                    <option value="11">Quận 11</option>
                                </select>
                            </div>
                        </div>
                    </div>
                    {{!-- <div class="form-group">
                        <div class="form-check">
                        <input class="form-check-input" type="checkbox" id="gridCheck" required>
                        <label class="form-check-label" for="gridCheck">
                            Tôi xin hứa sẽ nhớ mật khẩu
                        </label>
                        </div>
                    </div> --}}
                    <button type="submit" class="btn btn-outline-success">Đăng ký</button>
                </form>
            </div>
        </div>
    </div>
</div>