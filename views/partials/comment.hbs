<div class="container mt-5 bg-light"><!-- Comment -->
    <div class="d-block text-center mb-4">
        <a class="title" href="/review">Đánh giá phim</a>
    </div>
    <div class="row">
        {{#each reviews}}
        <div class="col-lg-6 col-sm-12 pl-lg-0 my-2">
            <div class="row">
                <div class="col-sm-4"><a href="/review/{{_id}}"><img src="{{imageSource}}" alt="" class="title-image"></a></div>
                <div class="col-sm-8" style="height:150px;">
                    <a class="title-link-review" href="/review/{{_id}}">{{originalName}} - {{vietnameseName}}</a>
                    <p class="brief-content-review">{{title}}</p>
                </div>
            </div>
        </div>
        {{/each}}
        <div class="container d-flex justify-content-end none-style-container">
            <a href="/review">
                <div class="movie-more-btn">Xem Thêm  <i class="fas fa-forward"></i></div>
            </a>
        </div>
    </div>
</div>