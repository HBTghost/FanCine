<div class="container-fluid d-flex justify-content-center m-2">
    <div id="banner-{{ _id }}" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
            {{#each imagesSource }}
                {{#if (isZero @index) }}
                <li data-target="#banner-{{ _id }}" data-slide-to="{{ @index }}" class="active"></li>
                {{else}}
                <li data-target="#banner-{{ _id }}" data-slide-to="{{ @index }}"></li>
                {{/if}}
            {{/each}}
        </ol>
        <div class="carousel-inner" role="listbox">
          {{#each imagesSource }}
            {{#if (isZero @index) }}
                <div class="carousel-item active">
            {{else}}
                <div class="carousel-item">
            {{/if}}
                <img src="{{ this }}" alt="" class="img-fluid" style="width: 800px !important; height: 400px !important;">
            </div>
          {{/each}}
        </div>
        <a class="carousel-control-prev" href="#banner-{{ _id }}" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#banner-{{ _id }}" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</div>