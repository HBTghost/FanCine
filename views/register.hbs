<div class="row mt-5">
  <div class="col-md-6 m-auto">
    <div class="card card-body text-center">
      <h1 class="mb-3">
        <img src="/images/design/secure-icon.png" alt="icon" width="20%" />
      </h1>
      <h2>
        Register New User
      </h2>
      {{> message }}
      <form action="/register" method="POST">
        <div class="form-group">
          <label for="name">Name</label>
          {{#if name}}
          <input type="name" id="name" name="name" class="form-control" placeholder="Enter Name"
            value="{{ name }}" />
          {{else}}
          <input type="name" id="name" name="name" class="form-control" placeholder="Enter Name"
            value="" />
          {{/if}}
        </div>
        <div class="form-group">
          <label for="email">Email</label>
          {{#if email }}
          <input type="email" id="email" name="email" class="form-control" placeholder="Enter Email"
            value="{{ email }}" />
          {{else}}
          <input type="email" id="email" name="email" class="form-control" placeholder="Enter Email"
            value="" />
          {{/if}}
        </div>
        <div class="form-group">
          <label for="password">Password</label>
          {{#if password }}
          <input type="password" id="password" name="password" class="form-control" placeholder="Enter Password"
            value="{{ password }}" />
          {{else}}
          <input type="password" id="password" name="password" class="form-control" placeholder="Enter Password"
            value="" />
          {{/if}}
        </div>
        <div class="form-group">
          <label for="password2">Confirm Password</label>
          {{#if password2 }}
          <input type="password" id="password2" name="password2" class="form-control" placeholder="Confirm Password"
            value="{{ password2 }}" />
          {{else}}
          <input type="password" id="password2" name="password2" class="form-control" placeholder="Confirm Password"
            value="" />
          {{/if}}
        </div>
        <button type="submit" class="btn btn-primary btn-block">
          Register
        </button>
      </form>
      <p class="mt-4">Already have an account? <a href="/login">Login</a></p>
    </div>
  </div>
</div>